@model Buienradar_Tracker.Models.WeatherData

@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-md-6">
        <h2>Temperature Overview</h2>
        <p>Average: @Html.DisplayFor(o => Model.Average)&deg;C</p>

        <table>
            @foreach (var station in Model.Stations)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Subscribe", "Create", "Subscriptions", new { area = "", weatherStationCode = station.Code }, new { @class = "btn btn-default" })
                    </td>
                    <td>
                        @Html.DisplayFor(o => station.Name): @Html.DisplayFor(o => station.GroundTemperatureDegreesCentigrade)&deg;C
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>3 Highest Temperatures</h2>

        <table>
            @foreach (var station in Model.HighestTemperatures)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Subscribe", "Create", "Subscriptions", new { area = "", WeatherStationCode = station.Code }, new { @class = "btn btn-default" })
                    </td>
                    <td>
                        @Html.DisplayFor(o => station.Name): @Html.DisplayFor(o => station.GroundTemperatureDegreesCentigrade)&deg;C
                    </td>
                </tr>
            }
        </table>
    </div>
</div>